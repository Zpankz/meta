{
  "name": "meta",
  "description": "Emit and validate deterministic governance artifacts for the local .index corpus.",
  "platform": "claude",
  "invocation": {
    "command": "python .index/interfaces/emit_index.py && python repo/00_meta/meta/scripts/issue_ledger.py --strict --base .",
    "entry": ".index/interfaces/emit_index.py"
  },
  "triggers": [
    "emit .index artifacts",
    "validate governance outputs",
    "recompute control-plane index",
    "run meta release"
  ],
  "preferred_artifacts": [
    ".index/main_index_payload.json",
    ".index/main_index.yaml",
    ".index/skill_graph.json",
    ".index/clustered_graph.json",
    ".index/control_ontology.json",
    ".index/control_ontology.schema.json",
    ".index/hyperedges.json",
    ".index/bridge_index.json",
    ".index/bridge_candidates.csv",
    ".index/issue_log.json",
    ".index/bd_ledger.json",
    ".index/quality_report.md",
    ".index/processing_report.md"
  ]
}
